#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../../../autoload.php')) {
    require_once __DIR__ . '/../../../autoload.php';
} else {
    require_once __DIR__ . '/../vendor/autoload.php';
}

$applicationName = 'tempo';
$applicationVersion = '0.0.03';

$application = new Symfony\Component\Console\Application($applicationName, $applicationVersion);

$tempo = Assimtech\Tempo\Loader::loadTempoDefinition();
$application->addCommands($tempo->getCommands());

$application->run();
