<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals               = "false"
    colors                      = "true"
    bootstrap                   = "vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Tempo Test Suite">
            <directory suffix="Test.php">src/Tempo</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>Test</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
